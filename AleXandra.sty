% Citas al inicio de un capítulo:
% **************************************************
\newcommand{\hugequote}{%
	{\book\fontsize{75}{80}\selectfont%
	\hspace*{-.475em}\color{iColor001!30}%
	\textit{\glqq}%
	\vskip -.26em}%
}

\newcommand{\chapterquote}[3]{%
	\begin{minipage}{.865\textwidth}%
		\begin{flushright}
			\begin{minipage}{.65\textwidth}%
			\quotefont\selectfont%
				\begin{flushleft}
					{\hugequote} \textit{#1}
				\end{flushleft}
	    		\begin{flushright}
    				\textcolor{iColor006}{--- \textbf{#2}} \\
    				(#3)
		    	\end{flushright}
		    \end{minipage}%
		\end{flushright}
	\end{minipage}%	  
	\bigskip
}

